<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuickXamarinFormsDemo"
             x:Class="QuickXamarinFormsDemo.MainPage"
             Title="Main Page">

    <StackLayout Padding="20">
        <Label Text="Enter name"/>
        <Entry Placeholder="Please enter your name"
               x:Name="EntryId"/>
        <Button Text="Click me"
                BackgroundColor="Blue"
                TextColor="White"
                x:Name="ButtonId"
                Clicked="ButtonId_Clicked"/>

        <Button Text="Navigate Me"
                BackgroundColor="Red"
                TextColor="White"
                x:Name="ButtonNavToPage1Id"
                Clicked="ButtonNavToPage1Id_Clicked"/>

        <Switch x:Name="SwitchId"
                Toggled="SwitchId_Toggled"/>
        <DatePicker x:Name="DatePickerId"/>
        <TimePicker x:Name="TimePickerId"/>
        <Slider Minimum="0"
                Maximum="10"
                x:Name="SliderId"
                ValueChanged="SliderId_ValueChanged"/>
        <Label Text="Slider Value Here"
               x:Name="LabelSliderValueId"/>
    </StackLayout>

</ContentPage>